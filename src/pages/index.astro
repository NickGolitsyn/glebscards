---
import Layout from "@/layouts/Layout.astro";
// @ts-ignore
import Home from "../components/Home.svelte";
import Navbar from "../components/Navbar.svelte";
import getUserData from "@/firebase/utils/auth/getUserData";
import Footer from "@/components/Footer.svelte";

const title = "Gleb's Cards";
const description = "This website sells Gleb Feels Christmas cards. Gleb's Cards";
const sessionCookie = Astro.cookies.get("session")?.value ?? null;
const user = await getUserData(sessionCookie);
---

<Layout title={title} description={description}>
  <Navbar client:load />
  <Home {user} client:load />
  <Footer client:load />
</Layout>
